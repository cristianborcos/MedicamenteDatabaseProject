<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body> 
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <img src="https://image.spreadshirtmedia.com/image-server/v1/mp/designs/11963856,width=178,height=178/medical-symbol-vector.png" height="80" width="80"/><a class="navbar-brand" @Html.ActionLink("Asociatia ROMFARM Romania", "Index", "Home")</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" @Html.ActionLink("Baza de Date a Medicamentelor", "List", "Medicamente")

                <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Anunta Lipsa Unui Medicament", "Add", "Medicamente")

                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Contact", "Contact", "Home")

                </li>
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Despre ROMFARM", "Desprenoi", "Home")

                </li>
            </ul>

        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Un proiect ROMFARM 2018</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
